<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/rice_flower"
    android:layout_height="match_parent"
    tools:context=".GuichetActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#2EC4B6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GUICHET"
            android:textColor="#011638"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/txtvBienvenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="56"
            android:text="Bonjour"
            android:textStyle="bold"
            android:textColor="#011638"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#E71D36"
            android:onClick="onClickQuitter"
            android:text="LOGOUT"
            android:textColor="#090707"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnZero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2EC4B6"
                android:onClick="onClickZero"
                android:text="0"
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/btnUn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2EC4B6"
                android:onClick="onClickUn"
                android:text="1"
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDeux"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2CBBAF"
                android:onClick="onClickDeux"
                android:text="2"
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTrois"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2CBBAF"
                android:onClick="onClickTrois"
                android:text="3"
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnQuatre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2EC4B6"
                android:onClick="onClickQuatre"
                android:text="4"
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/btnCinq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2EC4B6"
                android:onClick="onClickCinq"
                android:text="5"
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2CBBAF"
                android:onClick="onClickSix"
                android:text="6"
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSept"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2CBBAF"
                android:onClick="onClickSept"
                android:text="7"
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnHuit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2EC4B6"
                android:onClick="onClickHuit"
                android:text="8"
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/btnNeuf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2EC4B6"
                android:onClick="onClickNeuf"
                android:text="9"
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2CBBAF"
                android:onClick="onClickPoint"
                android:text="."
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEffacer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2CBBAF"
                android:onClick="onClickEffacer"
                android:text="C"
                android:textColor="#011638"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="6dp"
            >

            <TextView
                android:id="@+id/txtvMontant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Montant"
                android:textColor="@color/tarawera"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:inputType="number|numberDecimal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rdGroupTransact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:checkedButton="@id/rbDepot">

                <RadioButton
                    android:id="@+id/rbDepot"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:text="Dépot"
                    android:textColor="#011638"
                    android:textStyle="bold|italic">

                </RadioButton>

                <RadioButton
                    android:id="@+id/rbRetrait"
                    android:layout_width="87dp"
                    android:layout_height="38dp"
                    android:text="Retrait"
                    android:textColor="#011638"
                    android:textStyle="bold|italic">

                </RadioButton>

                <RadioButton
                    android:id="@+id/rbVirement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Virement"
                    android:textColor="#011638"
                    android:textStyle="bold|italic">

                </RadioButton>

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rdGroupGuichet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:checkedButton="@id/rbCheque"
                android:orientation="vertical"
                android:clickable="true">

                <RadioButton
                    android:id="@+id/rbCheque"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Chèque"
                    android:textColor="#011638"
                    android:textStyle="bold|italic">

                </RadioButton>

                <RadioButton
                    android:id="@+id/rbEpargne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Épargne"
                    android:textColor="#011638"
                    android:textStyle="bold|italic">

                </RadioButton>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEtat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bleu"
                android:onClick="onClickEtat"
                android:text="ÉTAT DES COMPTES"
                android:textColor="#2EC4B6"
                android:textStyle="bold">
            </Button>

            <Button
                android:id="@+id/btnSoumettre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bleu"
                android:onClick="onClickSoumettre"
                android:text="SOUMETTRE"
                android:textColor="#2EC4B6"
                android:textStyle="bold">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEtatCompte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtvSoldeCheque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Solde compte Chèque : "
                    android:textColor="#011638"
                    android:textSize="24sp">

                </TextView>

                <TextView
                    android:id="@+id/txtvMontantCheque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#011638"
                    android:textSize="24sp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtvSoldeEpargne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Solde compte Epargne : "
                    android:textColor="#011638"
                    android:textSize="24sp"></TextView>

                <TextView
                    android:id="@+id/txtvMontantEpargne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#011638"
                    android:textSize="24sp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>